<h1>Listing Riga Comandas</h1>

<table>
  <thead>
    <tr>
      <th>Id comanda</th>
      <th>Id prodotto</th>
      <th>Quantit</th>
      <th>Modifiche</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riga_comandas.each do |riga_comanda| %>
      <tr>
        <td><%= riga_comanda.id_comanda %></td>
        <td><%= riga_comanda.id_prodotto %></td>
        <td><%= riga_comanda.quantit %></td>
        <td><%= riga_comanda.modifiche %></td>
        <td><%= link_to 'Show', riga_comanda %></td>
        <td><%= link_to 'Edit', edit_riga_comanda_path(riga_comanda) %></td>
        <td><%= link_to 'Destroy', riga_comanda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

